 @namespace BootstrapComponents.Components
 @inject IJSRuntime jSRuntime

<div class="btn-group @Direction">

    <button type="button" class="btn @Background"> @Title</button>

    <button type="button" class="btn @Background dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
        <span class="visually-hidden">Toggle Dropdown</span>
    </button>

    <ul class="dropdown-menu @Mode">
        @foreach (var option in Options)
        {
            <li><a class="dropdown-item" href="@option.Url">@option.Text</a></li>
        }
    </ul>
</div>



